extends layout

block content
  link(rel='stylesheet', href='/css/scoreboard.css')
  .logo1
    img(src="/images/lab_banner.png")
  .timer
  .logo2
    a(href="/control")
      img(src="/images/2048-itaipava-jiu-jitsu.jpg")
  .fighter-1-name
    input#fighter-1-name(
      type="text",
      placeholder="Fighter 1"
    )
  .fighter-2-name
    input#fighter-2-name(
      type="text",
      placeholder="Fighter 2"
    )
