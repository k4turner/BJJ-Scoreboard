  .fighter-2-score 0
  .fighter-1-adv 0
  .fighter-1-penal 0
  .fighter-2-adv 0
  .fighter-2-penal 0
  .fighter-1-adv-text ADV
  .fighter-1-pen-text PEN
  .fighter-2-adv-text ADV
  .fighter-2-pen-text PEN
